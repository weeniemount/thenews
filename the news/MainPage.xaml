<Page
    x:Class="the_news.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:the_news"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="471" Width="815" RequestedTheme="Light">

    <Grid>
        <Image HorizontalAlignment="Left" Height="464" VerticalAlignment="Top" Width="843" Source="/Assets/Images/reporter.png"/>
        <Button Content="somone just fucking died" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Click="Button_Click" Height="51" Width="202"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,4,0,0" Text="welcome to the NEWS!!!!!" TextWrapping="Wrap" VerticalAlignment="Top" Height="46" Width="445" FontSize="36" IsColorFontEnabled="False" FontStyle="Oblique" FontFamily="Times New Roman"/>
        <Button Content="donation" HorizontalAlignment="Left" Margin="227,61,0,0" VerticalAlignment="Top" Click="Button_Click_1" RenderTransformOrigin="0.5,0.5" FontFamily="Times New Roman">
            <Button.RenderTransform>
                <CompositeTransform Rotation="31.3" SkewY="29.612" TranslateX="-11.22" TranslateY="18.454"/>
            </Button.RenderTransform>
        </Button>
        <Button Content="alarm" HorizontalAlignment="Left" Margin="23,120,0,0" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Click="Button_Click_2">
        </Button>
        <Button Content="sysem32" HorizontalAlignment="Left" Margin="299,71,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" Width="185" d:LayoutRounding="Auto" Click="Button_Click_3">
            <Button.RenderTransform>
                <CompositeTransform SkewY="13.325" TranslateY="8.763"/>
            </Button.RenderTransform>
        </Button>
        <Button Content="JOHNATHON PHONE" HorizontalAlignment="Left" Margin="113,177,0,0" VerticalAlignment="Top" Height="179" Width="289" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Click="Button_Click_4">
            <Button.RenderTransform>
                <CompositeTransform SkewX="-30.472" TranslateX="-52.662"/>
            </Button.RenderTransform>
        </Button>
        <Button Content="the weather" HorizontalAlignment="Left" Margin="381,136,0,0" VerticalAlignment="Top" Width="237" Click="Button_Click_5"/>
        <Button Content="john phone FQ" HorizontalAlignment="Left" Margin="197,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Width="125" Click="Button_Click_6">
            <Button.RenderTransform>
                <CompositeTransform SkewX="-16.861" TranslateX="5.796"/>
            </Button.RenderTransform>
        </Button>

        <Button x:Name="AutoToastButton" Content="Start Auto Toast" Click="AutoToast_Click" HorizontalAlignment="Left" Margin="623,76,0,0" VerticalAlignment="Top" Height="293" Width="182" />
        <Button Content="redesign" HorizontalAlignment="Left" Margin="437,190,0,0" VerticalAlignment="Top" Click="Button_Click_7" Height="96" Width="100"/>
        <StackPanel Orientation="Horizontal" Margin="10" Padding="389,343,0,0">
            <TextBlock Text="Toast Interval:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider x:Name="IntervalSlider" 
            Minimum="50" 
            Maximum="5000" 
            Value="100" 
            Width="200"
            ValueChanged="IntervalSlider_ValueChanged"
            VerticalAlignment="Center"/>
            <TextBlock x:Name="IntervalLabel" 
               Text="Interval: 100ms" 
               VerticalAlignment="Center" 
               Margin="10,0,0,0"/>
        </StackPanel>
        <Button Content="Roadblocks" HorizontalAlignment="Left" Margin="339,328,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Click="Button_Click_8" UseLayoutRounding="False" Width="229" d:LayoutRounding="Auto">
            <Button.RenderTransform>
                <CompositeTransform SkewY="8.005" TranslateY="4.359"/>
            </Button.RenderTransform>
        </Button>
        <Image HorizontalAlignment="Left" Height="100" Margin="112,364,0,0" VerticalAlignment="Top" Width="266" Source="/Assets/images/roadblockman.png" Stretch="Fill"/>
    </Grid>
</Page>
